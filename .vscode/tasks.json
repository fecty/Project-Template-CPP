{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",            
            "args": [
                "-static",
                "-Iinclude",
                "-Llib",
                "src/*.cpp",
                "-o",
                "bin/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "bin\\${fileBasenameNoExtension}.exe"
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "dependsOn": ["Build", "Run"],
            "dependsOrder": "sequence"
        }
    ]
}